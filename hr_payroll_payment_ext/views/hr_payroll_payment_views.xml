<odoo>
    <record id="view_hr_payslip_run_form_payment_ext" model="ir.ui.view">
        <field name="name">hr.payslip.run.form.payment.ext</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="payroll.hr_payslip_run_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="action_view_payments" class="oe_stat_button" icon="fa-money">
                        <field name="payment_count" widget="statinfo" string="Payments"/>
                    </button>
                </div>
            </xpath>

            <xpath expr="//sheet/group[@name='other']" position="after">
                <group string="Payments">
                    <group>
                        <field name="payment_state" readonly="1"/>
                        <field name="payment_journal_id"/>
                        <field name="payment_date"/>
                        <field name="payment_mode"/>
                    </group>
                    <group>
                        <button name="action_create_payments" type="object" string="Create Payments" class="btn-primary"/>
                        <button name="action_create_check_payments" type="object" string="Create Check Payments"/>
                        <button name="action_mark_paid" type="object" string="Mark Paid" attrs="{'invisible': [('payment_state','=','paid')]}"/>
                        <button name="action_view_payments" type="object" string="View Payments"/>
                        <field name="payment_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
