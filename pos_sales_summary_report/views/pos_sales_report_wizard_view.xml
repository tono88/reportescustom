<odoo>
  <record id="view_pos_sales_report_wizard_form" model="ir.ui.view">
    <field name="name">pos.sales.report.wizard.form</field>
    <field name="model">pos.sales.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Reporte de Ventas POS">
        <group>
          <group>
            <field name="date_from"/>
            <field name="date_to"/>
          </group>
          <group>
            <field name="invoice_filter"/>
            <p class="text-muted">Contado = Efectivo / Credito = otros metodos de pago</p>
		  <!-- ðŸ‘‡ nuevo -->
		  <field name="pos_config_id"
				 options="{'no_create': True}"
				 placeholder="Todos"
				 domain="[('company_id','in', allowed_company_ids)]"/>
		      <!-- ðŸ‘‡ NUEVO: filtro por clientes -->
		  <field name="partner_ids"
				 widget="many2many_tags"
				 domain="[('customer_rank','>',0)]"
				 options="{'no_create': True}"/>
		  </group>
        </group>
        <footer>
          <button name="action_print_pdf" type="object" string="Imprimir PDF" class="btn-primary"/>
          <button name="action_print_xlsx" type="object" string="Exportar Excel" class="btn-secondary"/>
		  <button special="cancel" string="Cancelar" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <menuitem id="menu_pos_sales_report_section"
            name="Reportes (Custom)"
            parent="point_of_sale.menu_point_root"
            sequence="90"/>

  <record id="action_pos_sales_report_wizard" model="ir.actions.act_window">
    <field name="name">Reporte de ventas (POS)</field>
    <field name="res_model">pos.sales.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_pos_sales_report_root"
            name="Reporte de ventas (POS)"
            parent="menu_pos_sales_report_section"
            action="action_pos_sales_report_wizard"
            sequence="10"/>
</odoo>