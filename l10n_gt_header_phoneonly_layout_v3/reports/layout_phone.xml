<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="external_layout_phone" name="External Layout (Phone under Logo - v3)">
    <!-- Header apilado verticalmente, sin grid/flex para evitar que CSS del tema lo mueva -->
    <div class="header" style="width:100%;">
      <img t-if="company.logo"
           t-att-src="image_data_uri(company.logo)"
           class="img m-0"
           style="max-height: 160px; display:block;"/>
      <t t-if="company.phone">
        <div style="margin-top: 8px; font-size:12pt; text-align:left;">
          <strong>Teléfono:</strong>
          <span t-esc="company.phone"/>
        </div>
      </t>
    </div>

    <!-- Cuerpo -->
    <div class="article o_report_layout_standard">
      <t t-raw="0"/>
    </div>

    <!-- Pie (lo maneja tu módulo de QR/logo) -->
    <div class="footer"/>
  </template>
</odoo>