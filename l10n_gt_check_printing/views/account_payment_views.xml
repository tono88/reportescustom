<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_account_payment_form_l10n_gt_check" model="ir.ui.view">
    <field name="name">account.payment.form.l10n.gt.check</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <!-- Insertamos el bloque al final del <sheet> -->
      <xpath expr="//sheet" position="inside">
        <group string="Cheque (GT)">
          <field name="check_void_print"/>
          <!-- Odoo 17/18: usar invisible con DOMINIO, NO 'attrs' -->
          <field name="check_void_reason" invisible="[('check_void_print','=',False)]"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
