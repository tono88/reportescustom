
<odoo>
    <!-- Botón para revisar adjuntos (de la versión previa) -->
    <record id="view_move_form_fel_capture_button" model="ir.ui.view">
        <field name="name">account.move.form.fel.capture.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button type="action" class="oe_stat_button" name="%(action_view_attachments)d">
                    <div class="o_stat_info">
                        <span class="fa fa-file-code-o"/>
                        <span class="o_stat_text">FEL XML</span>
                    </div>
                </button>
                <button type="object" class="oe_stat_button" name="action_fel_preview_certify" attrs="{'invisible': [('state','not in',('posted','cancel'))]}">
                    <div class="o_stat_info">
                        <span class="fa fa-eye"/>
                        <span class="o_stat_text">Prever &amp; Certificar</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Acción genérica para ver adjuntos del registro actual -->
    <record id="action_view_attachments" model="ir.actions.act_window">
        <field name="name">Adjuntos FEL</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('res_model','=','account.move'),('res_id','=',active_id)]</field>
        <field name="context">{'default_res_model':'account.move', 'default_res_id': active_id}</field>
        <field name="target">current</field>
    </record>
</odoo>
