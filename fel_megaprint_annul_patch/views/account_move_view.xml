<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_move_form_annul_megaprint" model="ir.ui.view">
      <field name="name">account.move.form.annul.megaprint.patch</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <!-- Insert button in the header buttons group. Fallback anchor: before Action Reverse if present -->
        <xpath expr="//header" position="inside">
          <button name="action_annul_fel_megaprint"
                  string="Anular FEL (Megaprint)"
                  type="object"
                  class="btn-secondary"
                  modifiers="{'invisible': [['|','|',('move_type','not in',('out_invoice','out_refund')),('state','!=','posted'),('firma_fel','=',False)]]}"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
