<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Clona el layout estándar, pero con footer vacío -->
  <template id="external_layout_clean_footer" inherit_id="web.external_layout_standard">
    <xpath expr="//div[contains(@class, 'footer')]" position="replace">
      <div class="footer">
        <!-- Footer intencionalmente vacío (agrega leyenda legal si quieres) -->
        <div class="text-center" style="font-size:10px;"></div>
      </div>
    </xpath>
  </template>
</odoo>
