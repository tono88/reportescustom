<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_inherit_budget" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.account.budget</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">

      <!-- Intenta insertarlo "dentro" de algún contenedor típico de ajustes de contabilidad -->
      <xpath expr="//div[@id='account_settings']
                   | //div[@id='accounting_settings']
                   | //section[@id='account_settings']
                   | //section[@id='accounting_settings']
                   | //div[contains(concat(' ', normalize-space(@class), ' '), ' o_setting_container ')]
                   | //div[contains(concat(' ', normalize-space(@class), ' '), ' o_settings_container ')]
                   | //div[contains(concat(' ', normalize-space(@class), ' '), ' o_settings ')]" position="inside">

        <div class="o_setting_box" id="account_budget">
          <div class="o_setting_left_pane">
            <label string="Presupuestos (Budget)"/>
          </div>
          <div class="o_setting_right_pane">
            <div class="content-group">
              <div class="row">
                <div class="col-12">
                  <span class="text-muted">
                    Gestión de presupuestos y posiciones presupuestarias. (No requiere toggle; los menús ya están activos).
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>

      </xpath>

      <!-- Si ninguno de los contenedores existe, como fallback, inserta al final del sheet -->
      <xpath expr="//form//sheet" position="inside">
        <t t-if="not (record and record)">
          <!-- truco para que no duplique si el primer xpath sí funcionó -->
        </t>
      </xpath>

    </field>
  </record>
</odoo>
