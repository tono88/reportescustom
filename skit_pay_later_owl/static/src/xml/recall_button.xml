<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Button to recall 'Pay Later' orders in ProductScreen -->
    <t t-name="skit_pay_later.ProductScreenPatch" owl="1">
        <xpath expr="//div[contains(@class,'control-buttons')]" position="inside">
            <button class="recall-pay-later-btn" t-on-click="onClickRecallPayLater">
                <i class="fa fa-history"></i>
                <t t-esc="env._t('Recuperar Pay Later')" />
            </button>
        </xpath>
    </t>
</templates>