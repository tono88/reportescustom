<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <template id="report_pos_order_document">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <div class="page">
              <h2>
                <span>POS Order</span>
                <t t-if="o.name"> - <span t-esc="o.name"/></t>
              </h2>

              <div class="row">
                <div class="col-6">
                  <h4>Customer</h4>
                  <t t-if="o.partner_id">
                    <div t-esc="o.partner_id.name"/>
                    <t t-if="o.partner_id.vat">
                      <div>NIT: <span t-esc="o.partner_id.vat"/></div>
                    </t>
                    <t t-if="o.partner_id.contact_address">
                      <div t-esc="o.partner_id.contact_address"/>
                    </t>
                  </t>
                  <t t-if="not o.partner_id">
                    <div><em>Walk-in</em></div>
                  </t>
                  <t t-if="o.email">
                    <div>Email: <span t-esc="o.email"/></div>
                  </t>
                  <t t-if="o.mobile">
                    <div>Mobile: <span t-esc="o.mobile"/></div>
                  </t>
                </div>

                <div class="col-6">
                  <h4>Order Info</h4>
                  <div>Reference: <span t-esc="o.pos_reference or o.name"/></div>
                  <div>Date: <span t-esc="o.date_order"/></div>
                  <div>Cashier: <span t-esc="o.user_id.display_name"/></div>
                  <div>Session: <span t-esc="o.session_id.display_name"/></div>
                  <div>Status: <span t-esc="o.state"/></div>
                </div>
              </div>

              <br/>
              <h4>Products</h4>
              <table class="table table-sm table-bordered">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Description</th>
                    <th class="text-end">Qty</th>
                    <th class="text-end">Unit Price</th>
                    <th class="text-end">Disc. %</th>
                    <th class="text-end">Taxes</th>
                    <th class="text-end">Subtotal</th>
                    <th class="text-end">Total</th>
                  </tr>
                </thead>
                <tbody>
                  <t t-foreach="o.lines" t-as="l" t-foreach-index="i">
                    <tr>
                      <td t-esc="(i if i is not None else 0) + 1"/>
                      <td>
                        <span t-esc="l.full_product_name or l.product_id.display_name"/>
                        <t t-if="l.customer_note">
                          <br/><small t-esc="l.customer_note"/>
                        </t>
                      </td>
                      <td class="text-end" t-esc="l.qty"/>
                      <td class="text-end">
                        <span t-esc="l.price_unit" t-options='{"widget":"monetary","display_currency": o.currency_id}'/>
                      </td>
                      <td class="text-end" t-esc="l.discount or 0.0"/>
                      <td class="text-end">
  <t t-set="taxes" t-value="l.tax_ids_after_fiscal_position or []"/>
  <t t-foreach="taxes" t-as="tx" t-foreach-index="j">
    <span t-esc="tx.name"/><t t-if="j != (len(taxes) - 1)">, </t>
  </t>
</td>
                      <td class="text-end">
                        <span t-esc="l.price_subtotal" t-options='{"widget":"monetary","display_currency": o.currency_id}'/>
                      </td>
                      <td class="text-end">
                        <span t-esc="l.price_subtotal_incl" t-options='{"widget":"monetary","display_currency": o.currency_id}'/>
                      </td>
                    </tr>
                  </t>
                </tbody>
              </table>

              <div class="row">
                <div class="col-6">
                  <h4>Payments</h4>
                  <t t-if="o.payment_ids">
                    <table class="table table-sm table-bordered">
                      <thead>
                        <tr>
                          <th>Date</th>
                          <th>Method</th>
                          <th class="text-end">Amount</th>
                        </tr>
                      </thead>
                      <tbody>
                        <t t-foreach="o.payment_ids" t-as="p">
                          <tr>
                            <td t-esc="p.payment_date"/>
                            <td>
                              <span t-esc="p.payment_method_id.display_name"/>
                              <t t-if="p.card_brand or p.card_no">
                                <br/>
                                <t t-if="p.card_brand"><small t-esc="p.card_brand"/></t>
                                <t t-if="p.card_no"><small> ****<span t-esc="(p.card_no or '')[-4:]"/></small></t>
                              </t>
                            </td>
                            <td class="text-end">
                              <span t-esc="p.amount" t-options='{"widget":"monetary","display_currency": o.currency_id}'/>
                            </td>
                          </tr>
                        </t>
                      </tbody>
                    </table>
                  </t>
                  <t t-else="">
                    <em>No payments.</em>
                  </t>
                </div>

                <div class="col-6">
                  <table class="table table-sm">
                    <tbody>
                      <tr>
                        <th class="text-end">Taxes</th>
                        <td class="text-end">
                          <span t-esc="o.amount_tax" t-options='{"widget":"monetary","display_currency": o.currency_id}'/>
                        </td>
                      </tr>
                      <tr>
                        <th class="text-end">Total</th>
                        <td class="text-end">
                          <strong t-esc="o.amount_total" t-options='{"widget":"monetary","display_currency": o.currency_id}'/>
                        </td>
                      </tr>
                      <tr>
                        <th class="text-end">Paid</th>
                        <td class="text-end">
                          <span t-esc="o.amount_paid" t-options='{"widget":"monetary","display_currency": o.currency_id}'/>
                        </td>
                      </tr>
                      <tr>
                        <th class="text-end">Difference</th>
                        <td class="text-end">
                          <span t-esc="o.amount_difference" t-options='{"widget":"monetary","display_currency": o.currency_id}'/>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>

              <t t-if="o.general_note">
                <h4>General Notes</h4>
                <p t-esc="o.general_note"/>
              </t>
            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>