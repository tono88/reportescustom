<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <!-- Add Paylater button in productScreen -->
    <t t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('oe_status')]" position="before">
            <t t-name="PayLaterButton" owl="1">
                <button class="oe_status btn btn-light rounded-0" t-on-click="onClickPayLaterOrder" >
                    <i class="oe_link_icon oe-link fa fa-history oe-white oe_icon_customfloat" />
                </button>
            </t>
        </xpath>
    </t>
</templates>