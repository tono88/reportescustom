<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="inv_report" inherit_id="account.report_invoice_document">
			<xpath expr="//div[@class='col-xs-4 pull-right']" position="replace">
				<table class="table table-condensed">
                        <tr class="border-black">
                        	<td></td>
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                            <tr>
                            	<td></td>
                                <td><span t-esc="amount_by_group[0] if len(o.tax_line_ids) > 1 else (o.tax_line_ids.tax_id.description or o.tax_line_ids.tax_id.name)"/></td>
                                <td class="text-right">
                                    <span t-esc="amount_by_group[2]"/>
                                </td>
                            </tr>
                        </t>
                        <tr class="border-black">
                        	<td></td>
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                 <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                        <t t-set="statement" t-value="o._get_payment_modes()" />
						<t t-if="statement">
							<t t-if="o._get_current_pending_invoice()">
								<tr t-foreach="statement" t-as="payment">
									<t t-if="(not(payment['journal'].name) in ('Pay Later'))">
										<td><h5><span t-esc="time.strftime('%d/%m/%Y', time.strptime(payment['create_date'],'%Y-%m-%d %H:%M:%S'))"></span></h5></td>								
										<td><t t-if="(not(payment['journal'].name) in ('Pay Later'))"><h5><span t-esc="payment['journal'].name"></span></h5></t></td>
										<td><h5><span t-esc="payment['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'></span></h5></td>
									</t>
								</tr>
							</t>
							<t t-else="">								
									<tr t-foreach="statement" t-as="payment">
										<td><h5><span t-esc="time.strftime('%d/%m/%Y', time.strptime(payment['create_date'],'%Y-%m-%d %H:%M:%S'))"></span></h5></td>								
										<td><h5><span t-esc="payment['journal'].name"></span></h5></td>
										<td><h5><span t-esc="payment['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'></span></h5></td>
									</tr>
								
							</t>
						</t>
						</tr>
                    </table>
			</xpath> 
		</template>
	</data>
</odoo>